@using DrReport.Models;
@model IEnumerable<DrReport.Models.DiagnosisResult>
@{
    ViewData["Title"] = "Index";
 Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:30px">
    <table class="table">
        <thead class="thead-light">
            <tr style="text-align: center;">
                <th scope="col">Doctor Name</th>
                <th scope="col">Clinic Name</th>
                <th scope="col">Reservation Date</th>
                <th scope="col">Diagnosis Test Type</th>
                <th scope="col">Diagnosis Result</th>
            </tr>
        </thead>
        <tbody>
        @if (Model.Count()!=0)
        {
            foreach (var item in Model)
            {
            <tr style="text-align: center;">
                <td scope="col">DR. @item.Reserve.Doctor.User.Fname @item.Reserve.Doctor.User.Lname</td>
                <td>@item.Reserve.Clinic.Name</td>
                <td>@item.Reserve.ReservationDate</td>
                <td>@item.Reserve.DtestName</td>
                <td> <a href="/SeeResult/ReportIndex/@item.Id" class=" btn btn-primary btn-sm btn-inline-center">Open Result</a></td>
            </tr>
            }
        }
        else
    	{
            <h5>Empty Results</h5>
	    }
        </tbody>
    </table>
</div>
