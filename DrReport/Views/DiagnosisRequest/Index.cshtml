@using DrReport.Models;
@model IEnumerable<DrReport.Models.Reserve>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Laytout2.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medical Diagnosis</title>
    <link href="~/Styles/Write Report/main.css" rel="stylesheet" />
</head>
<body>
    
    <div class="container" style="margin-top:30px">
        <table class="table">
            <thead class="thead-light">
                <tr style="text-align: center;">
                    <th scope="col">Patient Name</th>
                    <th scope="col">Age</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Diagnosis Test </th>
                    <th scope="col">Possible Disease </th>
                    <th scope="col">Reports</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() != 0)
                {
                    int x = 0;
                    foreach (var item in Model)
                    {
                        <tr style="text-align: center;">
                            <td scope="col">@ViewBag.patientNames[x]</td>
                            <td>@item.Patient.Age</td>
                            <td>@item.Patient.Gender </td>
                            <td>@item.DtestName</td>
                            <td>@item.PotentialDisease</td>
                            <td> <a href="/WriteReport/ReportIndex" class="btn btn-primary btn-sm btn-inline-center">Write Report</a></td>
                        </tr>
                        x = x + 1;
                    }
                }
                else
                {
                    <tr><td><h5 class="text-danger">No Reservation Found</h5></td></tr>
                }


            </tbody>
        </table>
    </div>
</body>
</html>