@model IEnumerable<DrReport.Models.Clinic>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container" style="margin-top:50px">
        <div class="input-group">
                @using (Html.BeginForm("Index", "MakeAppointment", FormMethod.Get))
                {
                @Html.TextBox("search", null, new { @class = "form-control" })<input  type="submit" value="search" />
                }
        </div>
        <table class="table" style="margin-top:50px">
            <thead class="thead-light">
                <tr style="text-align: center;">
                    <th scope="col">Doctor Name</th>
                    <th scope="col">Clinic Name</th>
                    <th scope="col">Working Hours</th>
                    <th scope="col">Location</th>
                    <th scope="col">Make Appointment</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Count() == 0)
            {
                <tr><td>No Search Match </td></tr>
            }
            else
            {
                int x = 0;

                foreach (var item in Model)
                {

                    <tr style="text-align: center;">
                        <td scope="col">@ViewBag.doctors[x]</td>
                        <td>@item.Name</td>
                        <td>@item.ApOpentime,@item.ApClosetime </td>
                        <td>@item.Location</td>
                        <td> <a href="/MakeAppointment/FillIndex/@item.Id" class="btn btn-primary btn-sm btn-inline-center">Make Appointment</a></td>
                    </tr>
                    x = x + 1;
                }
            }
            </tbody>
            </table>
        </div>
