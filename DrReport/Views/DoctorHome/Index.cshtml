
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Laytout2.cshtml";
}


<!--============Start Slider============-->
<div class="my-1">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <!-- Slide One - Set the background image for this slide in the line below -->
            <div class="carousel-item active" style="background-image: url('/Styles/Main/Images/pic4.jpg') ">
                <div class="container_">
                    <h2 class="header_carousel">See Diagnosis Requests</h2>
                    <p class="body_carousel"> See request from patients with all additional <br>information related to their condition.</p>
                </div>
            </div>

            <!-- Slide Two - Set the background image for this slide in the line below -->
            <div class="carousel-item" style="background-image: url('/Styles/Main/Images/pic5.jpg') ">
                <div class="container_">
                    <h2 class="header_carousel">Write Your Report </h2>
                    <p class="body_carousel">
                        With an user-friendly interface and supporting tools for diagnosis<br> like auto diagnosis, candidate specialist doctors features.
                    </p>
                </div>
            </div>

            <!-- Slide Three - Set the background image for this slide in the line below -->
            <div class="carousel-item" style="background-image: url('/Styles/Main/Images/pic6.jpg') ">
                <div class="container_">
                    <h2 class="header_carousel">Control Test List</h2>
                    <p class="body_carousel text-light">
                        Add new tests in the database, update or delete exiting ones.
                    </p>
                </div>
            </div>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<!--============End Slider============-->
