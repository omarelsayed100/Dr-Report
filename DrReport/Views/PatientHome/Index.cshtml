
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--============Start Slider============-->
<div class="my-1">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <!-- Slide One - Set the background image for this slide in the line below -->
            <div class="carousel-item active" style="background-image: url('/Styles/Main/Images/pic1.png')">
                <div class="container_">
                    <h2 class="header_carousel">Inform Your Symptoms</h2>
                    <p class="body_carousel">
                        To a machine bot of what you suffers from <br>and the machine will eventually
                        decide what<br> type of diagnostic test you should do.
                    </p>
                </div>
            </div>

            <!-- Slide Two - Set the background image for this slide in the line below -->
            <div class="carousel-item" style="background-image: url('/Styles/Main/Images/pic2.png')">
                <div class="container_">
                    <h2 class="header_carousel">See Your Result </h2>
                    <p class="body_carousel">Get Your Result instantly and Share it to others.</p>
                </div>
            </div>

            <!-- Slide Three - Set the background image for this slide in the line below -->
            <div class="carousel-item" style="background-image: url('/Styles/Main/Images/pic3.png')">
                <div class="container_">
                    <h2 class="header_carousel">Make Appointment</h2>
                    <p class="body_carousel">
                        with an auto generated appointment maker<br> based on the traffic regulator
                        algorithm.
                    </p>
                </div>
            </div>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<!--============End Slider============-->
